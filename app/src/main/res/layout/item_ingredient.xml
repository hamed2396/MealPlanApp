<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5mdp"

   >

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/coverImg"
        android:padding="@dimen/_5mdp"
        android:layout_width="@dimen/_70mdp"
        android:layout_height="@dimen/_70mdp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundPercent="1" />

    <TextView
        android:id="@+id/nameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5mdp"
        android:ellipsize="end"
        android:textColor="@color/limedSpruce"
        android:maxLines="2"
        app:layout_constraintEnd_toEndOf="@id/coverImg"
        app:layout_constraintStart_toStartOf="@id/coverImg"
        app:layout_constraintTop_toBottomOf="@id/coverImg" />

</androidx.constraintlayout.widget.ConstraintLayout>